<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- The actual components -->
	<bean id="test" class="gov.loc.repository.transfer.components.test.impl.TestComponentImpl" scope="prototype" />
		
	<bean id="filesondiskinventorier" class="gov.loc.repository.transfer.components.fileexamination.impl.FilesOnDiskInventorierImpl" parent="basecomponent" scope="prototype">
		<property name="fixityHelper">
			<ref local="fixityhelper" />
		</property>	
	</bean>
	
	<!-- Dependencies -->
	<bean id="basecomponent" abstract="true">
		<property name="packageModelDao">
			<ref local="packagedao" />
		</property>
		<property name="modelerFactory">
			<ref local="modelerfactory" />
		</property>
	</bean>
	
	<bean id="fixityhelper" class="gov.loc.repository.utilities.impl.JavaSecurityFixityHelper" scope="prototype">
	</bean>

	<bean id="packagedao" class="gov.loc.repository.packagemodeler.dao.impl.PackageModelDAOImpl" scope="prototype"/>
	
	<bean id="modelerfactory" class="gov.loc.repository.packagemodeler.impl.ModelerFactoryImpl" />


</beans>