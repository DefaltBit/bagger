#!/bin/sh

JAVA_HOME=/usr/jdk/latest
export JAVA_HOME

USER=transfer
EXEC=/bogus/path/to/servicecontainerdriver

# We're running this daemon as $USER
COMMAND="su $USER -c $EXEC"

case "$1" in
    start)
		[ -f $EXEC ] || {
			echo "$0: $EXEC not found"
			exit 1
		}
		$COMMAND >/dev/null 2>&1 &
	    ;;
    stop)
		pkill -U $USER
        ;;
    restart)
		$0 stop
		sleep 5
		$0 start
		;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

