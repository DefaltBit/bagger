<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

		<bean id="serviceBrokerDataSource" class="org.springframework.jdbc.datasource.SingleConnectionDataSource">
			<property name="driverClassName" value= "org.hsqldb.jdbcDriver" />
			<property name="url" value="jdbc:hsqldb:mem:servicebroker" />
			<property name="username" value="sa" />
			<property name="suppressClose" value="true" />
		</bean>

		<bean id="serviceBrokerSessionFactory" parent="abstractServiceBrokerSessionFactory">
			<property name="dataSource" ref="serviceBrokerDataSource" />
			<property name="hibernateProperties">
      			<value>
        			hibernate.dialect=org.hibernate.dialect.HSQLDialect
      			</value>
    		</property>
    		<property name="schemaUpdate" value="true" />
  		</bean>
  		
  		<bean id="requestServiceBroker" parent="abstractRequestServiceBroker">
			<constructor-arg value="$w{agent.workflow.id}" />
		</bean>
	
	  	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
			<property name="location" value="classpath:conf/workflow.core.properties" />
			<property name="placeholderPrefix" value="$w{" />
			<property name="placeholderSuffix" value="}" />
		</bean>
  				
</beans>