<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	 	<import resource="classpath:conf/servicerequestbroker-context.xml" />
	 	<import resource="classpath:conf/workflow-core-context.xml" />

	 	<context:component-scan base-package="gov.loc.repository.workflow.continuations"/>	
	
		<bean id="completedServiceRequestListener" class="gov.loc.repository.workflow.continuations.CompletedServiceRequestListener">
			<constructor-arg ref="requestServiceBroker" />
			<constructor-arg ref="continuationController" />
			<constructor-arg value="10000" />
		</bean>
</beans>