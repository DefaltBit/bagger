<?xml version="1.0" encoding="UTF-8"?>

<process-definition
  xmlns=""  name="prototype1b">
   <start-state name="start">
      <transition name="continue" to="copy"></transition>
   </start-state>
   <node name="copy">
      <action class="gov.loc.repository.workflow.actionhandlers.LoggingActionHandler">
         <message>Copying to backup</message>
      </action>
      <transition name="continue" to="verify"></transition>        
   </node>
   <node name="verify">
      <action class="gov.loc.repository.workflow.actionhandlers.LoggingActionHandler">
         <message>Verifying backup</message>
      </action>
      <transition name="continue" to="end1"></transition>      
   </node>
   <end-state name="end1"></end-state>
</process-definition>