<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan base-package="gov.loc.repository.fixity"/>
	<context:component-scan base-package="gov.loc.repository.bagit"/>
	
	<bean id="javaSecurityManifestGeneratorVerifier" class="gov.loc.repository.bagit.impl.FixityGeneratorManifestGeneratorVerifier">
		<constructor-arg ref="javaSecurityFixityGenerator" />
	</bean>

	<bean id="javaSecurityBagGeneratorVerifier" class="gov.loc.repository.bagit.impl.BagGeneratorVerifierImpl">
		<constructor-arg ref="javaSecurityManifestGeneratorVerifier" />
	</bean>

	<bean id="md5DeepManifestGeneratorVerifier" class="gov.loc.repository.bagit.impl.Md5DeepManifestGeneratorVerifierImpl">
		<constructor-arg>
			<map>
				<entry key="md5" value="md5deep" />
				<entry key="sha1" value="sha1deep" />
				<entry key="sha256" value="sha256deep" />
			</map>
		</constructor-arg>
	</bean>
			
</beans>