#!/usr/bin/env perl
BEGIN {
	use File::Basename;
	use Cwd qw(abs_path cwd);
	use lib abs_path(dirname($0) . "/../lib");
}

use strict;
use warnings;

$/ = undef;

my ($id, $type, $status, $system_name, $hostname) = @ARGV;
@ARGV = ();
my $root = cwd();

my $desc = <>;

##----------------------------------------------------------------------

use Transfer::Query;

add_row_or_die(
	'transport.events',
	ticket_id      => $id,
	event_type     => $type,
	event_status   => $status,
	system_name    => $system_name, 
	hostname       => $hostname, 
	root_directory => $root,
	event_details  => $desc,
);

##----------------------------------------------------------------------

