<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<import resource="classpath:conf/packagemodeler-core-context.xml" />
	<import resource="classpath:conf/common-core-context.xml" />
	
	<context:component-scan base-package="gov.loc.repository.transfer.components"/>
	
	<bean id="md5DeepComponent" class="gov.loc.repository.transfer.components.fileexamination.impl.Md5DeepImpl" scope="prototype">
		<constructor-arg ref="modelerFactory" />
		<constructor-arg ref="dataWriterPackageModelDao" />
		<constructor-arg>
			<map>
				<entry key="md5" value="md5deep" />
				<entry key="sha1" value="sha1deep" />
				<entry key="sha256" value="sha256deep" />
			</map>
		</constructor-arg>	
	</bean>	
</beans>