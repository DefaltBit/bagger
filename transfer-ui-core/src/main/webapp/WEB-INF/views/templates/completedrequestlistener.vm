<div id="completedRequestListener">
	<div id="details">
		<h2>Details</h2>
		<dl>
			<dt>Status:</dt>
			<dd>
				#if ($listener.isRunning()) Running #else Not running #end
			</dd>
		</dl>
	</div>

    #if ($permissions.canAdministerServiceRequestListener())
		<div id="administer">
			<h2>Administer</h2>
			<form method="post" action="${contextPath}/admin/completedrequestlistener.html">
				#if ($listener.isRunning())
	                <fieldset title="Stop listener">
			            <legend>
			            	Service request listener
	    		        </legend>
			            <input type="hidden" name="stop" value="true" />
						<input type="submit" class="button" value="stop"/>
						<label>Stop the service request listener.</label>
				    </fieldset>
			   #else
	                <fieldset title="Start listener">
			            <legend>
			            	Service request listener
	    		        </legend>
			            <input type="hidden" name="start" value="true" />
						<input type="submit" class="button" value="start"/>
						<label>Start the service request listener.</label>
				    </fieldset>
			   #end					
			</form>						
		</div>    	
    #end    
</div>
