    </ul>
	<div id="systemProcesses">
		<h2>System Processes</h2>
        <fieldset>
            <legend><b>A Summary of System Processes</b></legend>
            #if( $systemProcesses.size() > 10 )
		    <table>
		        <tbody><tr><td>
                    <form id="systemProcesses_pager" class="pager">
                		<img src="${contextPath}/images/icons/first.png" class="first"/>
                		<img src="${contextPath}/images/icons/prev.png" class="prev"/>
                		<label for="systemProcesses_pagedisplay">Showing page </label>
                		<input id="systemProcesses_pagedisplay" type="text" class="pagedisplay"/>
                		<img src="${contextPath}/images/icons/next.png" class="next"/>
                		<img src="${contextPath}/images/icons/last.png" class="last"/>
                		<label for="systemProcesses_pagesize">Results per page: </label>
                		<select id="systemProcesses_pagesize" class="pagesize">
                			<option selected="selected"  value="10">10</option>
                			<option value="20">20</option>
                			<option value="30">30</option>
                			<option  value="40">40</option>
                		</select>
                    </form>
                </td></tr></tbody>
            </table>
            #end
	        <table id="systemProcesses_table" class="tablesorter pageable"  >
	            <thead>
	                <tr>
                        <th></th>
                        <th> Name </th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tfoot><tr>
                        <th></th>
                        <th>Name</th>
                        <th>Status</th>
                </tr></tfoot>
                <tbody>
			        #foreach($systemProcess in $systemProcesses)
			        <tr id="systemProcess${systemProcess.id}" >
				        <td>
				            &nbsp;&nbsp;&nbsp;&nbsp;
				            #if( $systemProcess.isSuspended() )
				                <img
				               src="http://chart.apis.google.com/chart?cht=v&chs=20x20&chd=t:100&chco=FF9955"/>
				               <br/>
				               #if( $permissions.isAdministrator() )
				                <a href=""> start </a>
				               #end
				            #else
				                <img
				               src="http://chart.apis.google.com/chart?cht=v&chs=20x20&chd=t:100&chco=7FC659"/>
				               #if( $permissions.isAdministrator() )
				                <a href=""> stop </a>
				               #end
				            #end
				            &nbsp;&nbsp;&nbsp;&nbsp;
				        </td>
				        <td><a href="${contextPath}/admin/${systemProcess.id}.html">
				            <b>${systemProcess.name} ($systemProcess.id)</b>
				        </a><p>
				            ${systemProcess.description}
				        </p>
				        </td>
				        <td>&nbsp;&nbsp;&nbsp;&nbsp;
				            #if( $systemProcess.isSuspended() )
				                Suspended
				            #else
				                Running
				            #end
				            &nbsp;&nbsp;&nbsp;&nbsp;
				        </td>     
				    </tr>					
			        #end
			    </tbody>
		    </table>
		</fieldset>
	</div>
   		
   	<div id="vitalStatistics">
        <table style="height:300px;width:100%">
            <tbody valign="top"><tr>
                <td><fieldset>
                    <legend><b>Memory</b></legend>
                    <img style="float:left;" src="http://chart.apis.google.com/chart?cht=bhs&chs=200x50&chd=t:${totalMemory}|${maxMemory}&chco=4d89f9,c6d9fd&chbh=20&chds=0,${maxMemory}"/>
                    <ul class="homeNav">
                        <li>
                            <label for="maxMemory">Max Alloted Memory</label>
                            <span id="maxMemory">${maxMemory}</span><br/>
                        </li>
                        <li>
                            <label for="totalMemory">Total Memory In Use</label>
                            <span id="totalMemory">${totalMemory}</span><br/>
                        </li>
                        <li>
                            <label for="FreeMemory">Free Memory</label>
                            <span id="Free Memory">${freeMemory}</span><br/></li>
                    </ul>
                </fieldset><hr/></td>
                </tr><tr>
                <td><fieldset>
                    <legend><b>Database Connections</b></legend>
                    <img style="float:left;" src="http://chart.apis.google.com/chart?cht=p&chd=t:25,25,25,25&chs=250x100&chl=AMQ|JBPM|PackageDB|NFS" />
                </fieldset><hr/></td>
            </tr></tbody>
        </table>
    </div>
		
	<div id="systemInfo">
		<h2>Static System Information</h2>
        <fieldset>
            <legend><b>A Summary of Static System Information</b></legend>
	        <table id="systemInfo_table" class="tablesorter pageable"  >
	            <thead>
	                <tr>
                        <th>Name</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tfoot><tr>
                        <th>Name</th>
                        <th>Value</th>
                </tr></tfoot>
                <tbody>
			        #foreach($info in $systemInfo)
			        <tr id="systemInfo_${info.name}"  >
				        <td>${info.name}</td>
				        <td ><div style="word-wrap:break-word;width:200px;">
				            ${info.value}
				        </div></td>     
				    </tr>					
			        #end
			    </tbody>
		    </table>
		</fieldset>
	</div>
	
