<fieldset>
<legend>Variables</legend>
<table>
#foreach ($variableBean in $taskInstanceBean.taskBean.variableBeanList)
	#set($variableValue = "")
	#set($variableValue = $taskInstanceBean.variableMap.get($variableBean.name))
	<tr>
	#if ($variableBean.writable)
		<td><label for="variable${variableBean.name}">
		    $variableBean.name
		<label></td>
		<td><input id="variable${variableBean.name}"
		    type="text" 
		    name="variable.${variableBean.name}" 
		    value="$variableValue" /></td>
		#if ($variableBean.required)
			&nbsp;&nbsp;(Required)
		#end
	#else
	    <td><label for="variable${variableBean.name}">
	        $variableBean.name
	    <label></td>
		<td><span id="variable${variableBean.name}">
		    $variableValue
		</span></td>
	#end
    </tr>
	</fieldset>
#end	
</fieldset>