<div id="crumb_nav">
    <a name="page_content"></a>
    <h1> 
        $tiles.getAttribute('title') 
        #if ($task)
            &nbsp;&gt;&nbsp;  ${task.id}
        #elseif ($report)
            &nbsp;&gt;&nbsp; ${reportName}
        #end
    </h1>
    <div id="crumb">
        #if ($jbpmcontext.actorId)
            <span>&nbsp;|&nbsp;</span>
            You are logged in as <span id="currentUser">$jbpmcontext.actorId</span>
            <span>&nbsp;|&nbsp;</span>
            <a href="${contextPath}/login/logout.html">logout</a>
        #else
            #if($tiles.getAttribute('title') != 'Login')
            <span>&nbsp;|&nbsp;</span>
            <a href="${contextPath}/login/login.html#if($referer)?referer=$escape.url($referer)#end">login</a>
            #end
        #end
    </div>
</div>