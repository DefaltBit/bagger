	<definition name="taskinstance" extends="base">
		<put name="title"           value="Current Task" />
		<put name="content"         value="taskinstance.vm" />
	</definition>

	<definition name="processinstancelist" extends="base">
		<put name="title"           value="Workflows" />
		<put name="content"         value="processinstancelist.vm" />
	</definition>

	<definition name="processinstance" extends="base">
		<put name="title"           value="Current Workflow" />
		<put name="content"         value="processinstance.vm" />
	</definition>

	<definition name="admin" extends="base">
		<put name="title"           value="Admin Panel" />
		<put name="content"         value="admin.vm" />
	</definition>
	
	<definition name="reports" extends="base">
		<put name="title"           value="Reports" />
		<put name="content"         value="reports.vm" />
	</definition>
	
	<definition name="report" extends="base">
		<put name="title"           value="Report" />
		<put name="content"         value="abstract-report.vm" />
	</definition>
