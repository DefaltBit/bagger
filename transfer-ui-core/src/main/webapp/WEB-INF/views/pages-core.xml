<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
  "http://struts.apache.org/dtds/tiles-config_1_3.dtd">
<tiles-definitions>
  
	<definition name="base"             page="base.vm">
	    <put name="springXhtmlCompliant"  value="true"/>
	    <put name="context"               value="transfer-ui-core"/>
		<put name="meta"                  value="meta.vm" />
		<put name="css"                   value="css.vm" />
		<put name="javascript"            value="javascript.vm" />
		<put name="top-nav"               value="top-nav.vm" />
		<put name="search"                value="search.vm" />
		<put name="crumb-nav"             value="crumb-nav.vm" />
		<put name="footer"                value="footer.vm" />
	</definition>

	<definition name="test" extends="base">
		<put name="title"           value="Test" />
		<put name="content"         value="content.vm" />
	</definition>
	
	<definition name="login" extends="base">
		<put name="title"           value="Login" />
		<put name="content"         value="login.vm" />
	</definition>
	
	<definition name="tasks" extends="base">
		<put name="title"           value="Tasks" />
		<put name="content"         value="tasks.vm" />
	</definition>

</tiles-definitions> 